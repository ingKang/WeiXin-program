.detail-container {
  height: 400rpx;
  filter: blur(40rpx);
  opacity: 0.6;
}

.detail-mask {
  position: absolute;
  width: 100%;
  height: 400rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}

.detail-img {
  width: 260rpx;
  height: 90%;
  margin-right: 24rpx;
}

.detail-info {
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 400rpx;
  padding: 20rpx;
}

.detail {
  flex-grow: 1;
  line-height: 50rpx;
}

.detail view {
  color: #fff;
  font-size: 24rpx;
}

.detail .detail-nm {
  font-size: 40rpx;
  font-weight: 700;
}

.detail .sc {
  color: #fc0;
  font-size: 36rpx;
  font-weight: 700;
}

.desc {
  padding: 20rpx;
  color: rgb(107, 107, 107);
  font-size: 28rpx;
  text-indent: 60rpx
}

.comment-container {
  padding: 0 20rpx;
}

.comment {
  padding: 10rpx;
}

.comment-content {
  border: 1px solid #ccc;
  width: 100%;
  box-sizing: border-box;
  font-size: 32rpx;
  border-radius: 8rpx;
  padding: 20rpx;
}

.comment-image image {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
}

.comment-img {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx 20rpx 0 0;
}
button{
  margin: 2rpx 0 10px 0
}
.user-img,.user-name{
  font-size: 28rpx;
  font-weight: 600;
  display:inline-block;
  margin-left: 10rpx;
  height: 50rpx;
  border-radius: 50%;
}
.user-img{
  width: 50rpx;
  margin-top:20rpx;
}
.popurlar-comment{
  font-size: 42rpx;
  font-weight: 500;
  margin:50rpx 0 12rpx 2rpx;
  padding-bottom: 14rpx;
  border-bottom: 1px dotted grey;
}
.comment-data{
  font-size: 20rpx;
  float: right;
  margin-right:20rpx;
  color: grey;
  margin-top: 46rpx;
}
.comment-content{
  font-size:28rpx;
  text-indent: 56rpx;
  color: rgb(87, 86, 86);
  border:0;
  padding: 10rpx;

}